<% if (links = account.farcaster_links) && links.exists? %>

  <h2>
    <a target="_blank" class="text-dark" href="https://warpcast.com/<%= u = account.farcaster_user['username'] %>">
      From Farcaster
    </a>
  </h2>

  <div class="mb-3">
    <div class="row">

      <% links.first(5).each { |og| %>
      <div class="col-12">
        <div class="mb-4">
          <div class="row block no-gutters align-items-stretch">
            <div class="col-3 bg-white">
              <a href="<%= og['url']%>" target="_blank">
                <img class="w-100" onerror="this.style.display='none'" src="<%= og['image'] %>">
              </a>
            </div>
            <div class="col-9">
              <div class="pl-3 py-lg-3">
                <h4>
                  <a class="text-dark" href="<%= og['url'] %>" target="_blank">
                    <%= og['title']%>
                  </a>
                </h4>
                <% if og['description'] %>
                  <p class="mb-2">
                    <a class="text-dark" href="<%= og['url']%>" target="_blank" style="text-decoration: none">
                      <%= og['description'].truncate(150) %>
                    </a>
                  </p>
                <% end %>
                <p class="mb-0 text-muted">
                  <a target="_blank" class="text-muted" href="<%= og['url'] %>">
                    <%= URI(og['url']).host.gsub('www.', '') %>
                  </a>
                  &middot;
                  <a target="_blank"  class="text-muted" href="https://warpcast.com/<%= u %>/<%= og['hash'] %>">
                    <%= Time.at(og['timestamp']/1e3).to_date.to_s(:post) %>
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
<% end %>