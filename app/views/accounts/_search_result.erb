<div class="search-result-media" style="height: auto">
  <%= partial :'accounts/square', locals: { account: account, style: 'display: block;' } %>
</div>
<div class="search-result-content">

  <% if defined?(facilitator_info) && facilitator_info %>
    <% if (e = (events = Event.past.and(:id.in => account.event_facilitations.pluck(:event_id))).count) > 0 %>
      <small class="d-inline-block mb-2 mt-lg-0 label label-primary">Facilitated <%= pluralize(e,'event') %></small>
    <% end %>
  <% end %>

  <h2>
    <a class="text-dark" href="/u/<%= account.username %>"><%= account.name %></a>
  </h2>
  <%= partial :'accounts/buttons', locals: { account: account } %>
  <div class="mt-2">
    <% if defined?(facilitator_info) && facilitator_info %>
      <%= cp(:'accounts/facilitator_info', key: "/facilitator_info?account_id=#{account.id}", locals: { account: account }) %>
    <% else %>
      <%= partial :'accounts/table', locals: { account: account, birthday: defined?(birthday) } %>
    <% end %>
  </div>

  <% if defined?(facilitator_info) && facilitator_info %>
    <div class="mt-2">
      <big>
        <%= simple_format account.feedback_summary%>
      </big>
    </div>
  <% end %>
</div>
