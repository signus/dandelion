<div class="newspaper">
  <h1 class="newspaper-title">The Dandelion Daily</h1>
  <div class="date-navigation">
    <a href="/daily?date=<%= (@date - 1).strftime('%Y-%m-%d') %>" class="nav-arrow">
      <i class="bi bi-arrow-left"></i>
    </a>
    <span><%= @date.strftime("%A, %B %-d, %Y") %></span>
    <% if @date < Date.today %>
      <a href="/daily?date=<%= (@date + 1).strftime('%Y-%m-%d') %>" class="nav-arrow">
        <i class="bi bi-arrow-right"></i>
      </a>
    <% else %>
      <span class="nav-arrow disabled">
        <i class="bi bi-arrow-right"></i>
      </span>
    <% end %>
  </div>

  <div data-with-placeholder data-pagelet-url="/daily?date=<%= @date.strftime('%Y-%m-%d') %>">
    <% 
      headers = File.read(Padrino.root('app', 'views', '_daily.erb'))
                   .scan(/render_article\("([^"]+)"/).flatten
    %>

    <% headers.each do |header| %>
      <div class="article">
        <h2 class="article-title"><%= header %></h2>
        <div class="article-content">
          <% 10.times do %>
            <div class="flicker mb-3" style="width: <%= rand(10..90) %>%; background: rgba(0,0,0,0.1)">&nbsp;</div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .newspaper {
    max-width: 1140px;
    margin: 0 auto;
  }

  .newspaper-title {
    font-family: "UnifrakturMaguntia", "Times New Roman", Times, serif;
    text-align: center;
    font-size: min(3rem, 9vw);
    margin-bottom: 10px;
    letter-spacing: 2px;
    white-space: nowrap;
  }

  .date-navigation {
    text-align: center;
    border-top: double 4px #000;
    border-bottom: 1px solid #000;
    margin-bottom: 20px;
    padding: 10px 0;
  }

  .nav-arrow {
    color: #000;
    padding: 0 10px;
    text-decoration: none;
  }

  .nav-arrow:hover {
    color: #666;
    text-decoration: none;
  }

  .nav-arrow.disabled {
    color: #ccc;
    cursor: not-allowed;
  }

  .article {
    column-count: 2;
    column-gap: 40px;
    margin-bottom: 30px;
  }

  .article.single-column {
    column-count: 1 !important;
  }

  @media (max-width: 767px) {
    .article {
      column-count: 1;
    }
  }

  .article-title {
    column-span: all;
    font-size: 1.8rem;
    margin-bottom: 15px;
  }

  .article-content {
    font-size: 1rem;
    line-height: 1.6;
    text-align: justify;
    color: rgb(18, 18, 18);
  }

  .facilitator-info .bi.bi-star-fill {
    display: none;
  }

  .average-rating {
    font-size: 1.5em;
  }
</style>