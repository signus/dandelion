<% if average_rating = event_feedbacks.average_rating %>
  <div id="average-rating" style="font-size: 2em">
    <%= average_rating %><small class="text-muted">/5
      from <%= pluralize event_feedbacks.count, 'rating' %>
      <% if defined?(events) %>
        across <%= pluralize events.count, 'event' %>
      <% end %>
    </small>
    <div class="d-lg-inline">
      <% average_rating.round.times do %><i class="bi bi-star-fill"></i><% end %>
    </div>
  </div>
<% end %>
