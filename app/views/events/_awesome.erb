<div id="upcoming-events" class="card shadow-sm d-none d-lg-block">
  <h3 class="card-header bg-primary text-white">Your upcoming events</h3>
  <div class="card-body">
    <%= partial :'events/my_upcoming' %>
  </div>
</div>

<% if current_account.recommended_events && current_account.recommended_events.count > 0 %>
  <div class="card shadow-sm mt-3">
    <h3 class="card-header bg-primary text-white">Recommended for you</h3>
    <div class="card-body">
      <%= cp(:'events/recommended', key: "/events/recommended?account_id=#{current_account.id}", expires: 12.hours.from_now) %>
      <p class="mt-3 mb-0"><a href="/recommendations/events">More recommendations &rarr;</a></p>
    </div>
  </div>
<% end %>

<div class="card shadow-sm mt-3">
  <h3 class="card-header bg-primary text-white">Trending</h3>
  <div class="card-body">
    <%= cp(:'events/trending', key: '/events/trending', expires: 12.hours.from_now) %>
  </div>
</div>
