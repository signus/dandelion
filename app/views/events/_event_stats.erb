  <% } %>
  <% unless @event %>
    <tfoot>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <% if organisation.stripe_client_id %>
          <th></th>
        <% else %>
          <th></th>
        <% end %>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <% 13.times do %>
          <th></th>
        <% end %>
        <th></th>
        <th></th>
      </tr>
    </tfoot>
  <% end %>
</table>
