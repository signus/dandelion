<table id="event_stats" class="table table-striped table-hover table-sm" style="font-size: 0.9em">
  <thead class="bg-white">
    <tr>
      <th>Name</th>
      <th></th>
      <th>Date</th>
      <th>Coordinator</th>
      <th>Facilitators</th>
      <th>Tags</th>
      <th>Activity</th>
      <th>Local group</th>
      <th>Facebook event</th>
      <th>Tickets sold</th>
      <th>Checked in</th>
      <th>Ticket revenue</th>
      <th>Revenue sharer</th>
      <th>Credit due</th>
      <th>Donations</th>
      <th>Feedback</th>
    </tr>
  </thead>
  <% events.each { |event| %>
  <tr data-pagelet-url="/events/<%= event.id %>/stats_row<%= "#{"?organisation_id=#{@organisation.id}" if @organisation}" %>"><% if @event %><%= cp(:'events/event_stats_row', locals: { event: @event }, key: "/events/#{@event.id}/stats_row?timezone=#{Time.zone.name}#{"&organisation_id=#{@organisation.id}" if @organisation}") %><% end %></tr>
  <% } %>
  <% if @organisation %>
    <% events.each { |event| %>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th>
        <%=events.sum { |event| event.tickets.count }%>
      </th>
      <th></th>
      <th>
        <%= m events.sum { |event| Money.new(event.discounted_ticket_revenue, event.currency) }, @organisation.currency%>
      </th>
      <th></th>
      <th></th>
      <th>
        <%= m events.sum { |event| Money.new(event.donation_revenue, event.currency) }, @organisation.currency%>
      </th>
      <th></th>
    </tr>
    <% } %>
  <% end %>
</table>
