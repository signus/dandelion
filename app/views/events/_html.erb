<table style="width: 100%; border-collapse: separate">
  <% i = 0; @events.and(:has_image => true).each { |event| %>
  <% if i.even? %>
    <%== '<tr>' %>
  <% end %>
  <td style="line-height: 0; width: 50%"><a href="<%= ENV['BASE_URI'] %>/events/<%= event.id %>"><img style="width: 100%" src="<%= u event.image.thumb('992x992').url %>"></a></td>
  <% if i.odd? %>
    <%== '</tr>' %>
  <% end %>
  <% i += 1 } %>
  <% if i.odd? %>
    <%== '</tr>' %>
  <% end %>
</table>
