<%= partial :'events/nav', locals: { event: @event } %>

<% if organisation_admin?(@event.organisation) %>
  <div class="text-center">
    <a class="d-block d-lg-inline btn btn-danger" href="/events/<%= @event.id %>/destroy">Delete event and attempt to refund all Stripe orders</a>
    or
    <a class="d-block d-lg-inline btn btn-outline-danger" href="/events/<%= @event.id %>/destroy?no_refunds=1">Delete event without refunding Stripe orders</a>
  </div>
<% else %>
  <div class="alert alert-warning">
    Please ask an admin of <a class="text-warning text-underline" href="/o/<%=@event.organisation.slug%>"><%=@event.organisation.name%></a> to delete the event.
  </div>
<% end %>
