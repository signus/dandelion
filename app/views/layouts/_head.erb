<%= favicon_tag 'black-on-transparent-sq.png' %>
<title>
  <% if @fulltitle %><%= @fulltitle %>
  <% else %><%= "#{@title} Â· " if @title %>
    <%= Padrino.env == :development ? 'DEV' : 'Dandelion' %>
  <% end %>
</title>
