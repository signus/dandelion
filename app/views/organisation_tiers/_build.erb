<% form_for @organisation_tier, @organisation_tier.new_record? ? "/o/#{@organisation.slug}/organisation_tiers/new" : "/o/#{@organisation.slug}/organisation_tiers/#{@organisation_tier.id}/edit" do  |f| %>
  <%= f.text_block :name %>
  <%= f.text_area_block :description %>
  <script>
    $(function () {
      $('#organisation_tier_description').attr('rows', '2')
      autosize($('#organisation_tier_description')[0])
    })
  </script>

  <div class="form-group">
    <label for="organisation_tier_threshold">Threshold</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"><%= money_symbol(@organisation.currency) %></span>
      </div>
      <%= f.number_field :threshold, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="organisation_tier_discount">Discount</label>
    <div class="input-group">
      <%= f.number_field :discount, class: 'form-control' %>
      <div class="input-group-append">
        <span class="input-group-text">%</span>
      </div>
    </div>
  </div>

  <%= f.text_block :gc_plan_id %>
  <div class="my-3">
    <%= f.submit_block destroy_url: "/o/#{@organisation.slug}/organisation_tiers/#{@organisation_tier.id}/destroy" %>
  </div>
<% end %>
