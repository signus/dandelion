<%= partial :'organisations/nav', locals: { organisation: @organisation } %>

<p>To delete the organisation, type the organisation's name (<%= @organisation.name %>) into the box below and click 'Delete organisation'.</p>
<% form_tag "/o/#{@organisation.slug}/destroy", class: 'form-inline' do %>
  <div class="form-group mr-2">
    <%= text_field_tag :organisation_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-danger">Delete organisation</button>
  </div>
<% end %>
