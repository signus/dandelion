<ul style="margin-left: 1.4em" class="icon-list <% if place.image %>text-white<% else %>text-dark<% end %>">
  <li><i class="bi bi-geo-alt-fill"></i> <%= place.location.gsub(/#{place.name}[\w ]*,/i, '') %></li>
  <% if place.website %>
    <li><i class="bi bi-globe-europe-africa"></i><a target="_blank" class="<% if place.image %>text-white<% else %>text-dark<% end %>" href="<%= place.website %>"><%= URI(place.website).host.gsub('www.', '') %></a></li>
  <% end %>
  <% if !@account && place.account %>
    <li><i class="bi bi-person-fill"></i> Listed by <a class="<% if place.image %>text-white<% else %>text-dark<% end %>" href="/u/<%= place.account.username %>"><%= place.account.name %></a></li>
  <% end %>
  <% if (c = place.comments.count) > 0 %>
    <li><i class="fa fa-comment-o"></i> <a class="<% if place.image %>text-white<% else %>text-dark<% end %>" href="/places/<%= place.id %>#comments"><%= pluralize(c, 'comment') %></a></li>
  <% end %>
</ul>
