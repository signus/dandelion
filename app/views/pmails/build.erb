<% if @organisation %>
  <%= partial :'organisations/nav', locals: { organisation: @organisation } %>
  <% organisation = @organisation %>
<% elsif @activity %>
  <%= partial :'activities/nav', locals: { activity: @activity } %>
  <% organisation = @activity.organisation %>
<% elsif @local_group %>
  <%= partial :'local_groups/nav', locals: { local_group: @local_group } %>
  <% organisation = @local_group.organisation %>
<% elsif @event %>
  <%= partial :'events/nav', locals: { event: @event } %>
  <% organisation = @event.organisation %>
<% end %>


<style>
  #pmail_body { height: 30rem; }
</style>

<script type="text/javascript">
  $(function () {

  <% if params[:preview] %>
      window.open('/pmails/<%= @pmail.id %>/preview?<%= @scope %>', null, 'scrollbars=yes,width=800,height=600,left=150,top=150').focus();
  <% end %>

    $('#pmail-form').submit(function() {
      if($('#pmail_to_option').val().length == 0) {
        alert('Please set the To field')
        return false
      }
    })

  });
</script>


<% form_for @pmail, @pmail.new_record? ? '/pmails/new' : "/pmails/#{@pmail.id}/edit", id: 'pmail-form', multipart: true do |f| %>

  <%= partial :'pmails/header', locals: { f: f, organisation: organisation } %>
  <%= partial :'pmails/clicks', locals: { f: f, organisation: organisation } %>

  <% if @organisation %>
    <%= hidden_field_tag :organisation_id, value: @organisation.id %>
  <% elsif @activity %>
    <%= hidden_field_tag :activity_id, value: @activity.id %>
  <% elsif @local_group %>
    <%= hidden_field_tag :local_group_id, value: @local_group.id %>
  <% elsif @event %>
    <%= hidden_field_tag :event_id, value: @event.id %>
  <% end %>

  <%= partial :'pmails/to_options', locals: { f: f, organisation: organisation } %>
  <%= partial :'pmails/exclude', locals: { f: f, organisation: organisation } %>

  <% if @pmail.persisted? %>
    <span class="mb-3 badge badge-primary"><%= pluralize(@pmail.send_count, 'person') %></span>
  <% end %>
  <%= f.text_block :from %>
  <%= f.text_block :subject %>
  <%= f.text_block :preview_text %>

  <% if @pmail.markdown? %>
    <div contenteditable="true" id="pastebin" style="opacity: 0.01; width: 100%; height: 1px; overflow: hidden;"></div>
    <%= f.text_area_block :body %>
  <% else %>
    <%= f.wysiwyg_block :body %>
  <% end %>

  <%= f.text_block :link_params %>
  <% if @pmail.sent_at %>
    <a data-confirm="Are you sure you want to delete this mail?" href="/pmails/<%= @pmail.id %>/destroy?<%= @scope %>" class="btn btn-danger">Delete</a>
  <% else %>
    <%= f.submit_block destroy_url: "/pmails/#{@pmail.id}/destroy?#{@scope}", button_text: @pmail.new_record? ? 'Save and continue' : 'Save' %>
  <% end %>


  <style>
    @media(max-width: 991px) {
        #chat { display: block !important }
    }
    @media(min-width: 992px) {
      #chat-container { border-radius: 0.25rem; box-shadow: #666 0 0 5px; background: white; position: fixed; width: 411px; bottom: 0.475rem; right: 0.475rem;  }
      #chat { height: 400px; overflow: auto; padding: 20px }
    }
  </style>
  <div class="card mt-5">
    <h5 class="card-header bg-primary text-white d-lg-none"><%= organisation.name %>'s files</h5>
    <div class="card-body">
      <div id="chat-container">
        <div class="d-none d-lg-block p-2 bg-primary" style="border-radius: 0.25rem 0.25rem 0 0;">
          <a id="chat-hide" style="<%= 'display:none' if !params[:file_q] %>"        
            class="text-white" href="javascript:;"
            onclick="$('#chat').hide();$(this).hide().next().show();$('#chat-spacer').removeClass('d-lg-block');$('#select-tickets').addClass('mb-4')">

            <span class="float-right"><i class="bi bi-chevron-double-down"></i></span>
            <span class="text-white font-weight-bold">
              <%= organisation.name %>'s files
            </span>

          </a>
          <a id="chat-show" style="<%= 'display:none' if params[:file_q] %>"
             class="text-white" href="javascript:;"         
             onclick="$('#chat').show();$(this).hide().prev().show();$('#chat-spacer').addClass('d-lg-block');$('#select-tickets').removeClass('mb-4')">

            <span class="float-right"><i class="bi bi-chevron-double-up"></i></span>
            <span class="text-white font-weight-bold">
              <%= organisation.name %>'s files
            </span>
          </a>
        </div>
        <div id="chat" <% if !params[:file_q] %>style="display:none"<% end %>>

          <% if organisation %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
              </div>
              <%= text_field_tag :file_q, class: 'form-control', placeholder: 'Search files', value: params[:file_q] %>
            </div>

            <div id="attachments" data-pagelet-url="/pmails/<%= organisation.id %>/attachments?<%= @scope %>&file_q=<%= params[:file_q] %>"></div>
            <style>
              #pmail_file { width: 100% }
            </style>
            <%= f.file_block :file %>
            <%= f.hidden_field :markdown, value: @pmail.markdown? ? true : false %>
            <%= f.submit_block button_text: 'Upload' %>
          <% end %>

        </div>
      </div>
    </div>
    <div class="d-none <%= 'd-lg-block' if params[:file_q] %>" id="chat-spacer" style="margin-bottom: 410px"></div>

  <% end %>
