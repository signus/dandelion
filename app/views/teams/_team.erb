<% if @team.intro %>
  <div style="margin-bottom: 20px">
    <div class="wysiwyg">
      <%== Sanitize.fragment(Rinku.auto_link(@team.intro), Sanitize::Config::DANDELION) %>
    </div>
  </div>
<% end %>
<% if @team.budget %>
  <div style="margin-bottom: 20px">
    <i class="bi bi-cash-coin"></i> This team has spent <%= m @team.spent, @gathering.currency %> of a budget of <%= m @team.budget, @gathering.currency %>
  </div>
<% end %>
<div data-pagelet-url="/commentable?commentable_type=Team&commentable_id=<%= @team.id %>">
  <%= partial :'comments/commentable', locals: { commentable: @team } %>
</div>
